{
  "name": "sanskriti-hamburg-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "netlify/functions"
  ],
  "scripts": {
    "start:webapp": "npm run start --workspace=@sanskriti/webapp",
    "start:adminapp": "npm run start --workspace=@sanskriti/adminapp",
    "build:webapp": "npm run build --workspace=@sanskriti/webapp",
    "build:adminapp": "npm run build --workspace=@sanskriti/adminapp",
    "build": "npm run build:webapp && npm run build:adminapp",
    "lint": "eslint .",
    "netlify:dev": "netlify dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "typescript-eslint": "^8.38.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}